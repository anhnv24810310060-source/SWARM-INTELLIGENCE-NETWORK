{
  "dashboard": {
    "title": "SwarmGuard Security Overview",
    "tags": ["swarm", "security", "overview"],
    "timezone": "utc",
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Detection Rate (Last Hour)",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(swarm_detection_true_positives_total) / (sum(swarm_detection_true_positives_total) + sum(swarm_detection_false_negatives_total))",
            "legendFormat": "Detection Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 0.95, "color": "yellow" },
                { "value": 0.98, "color": "green" }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 0, "y": 0 }
      },
      {
        "id": 2,
        "title": "False Positive Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(swarm_detection_false_positives_total) / (sum(swarm_detection_true_positives_total) + sum(swarm_detection_false_positives_total))",
            "legendFormat": "FP Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 0.01, "color": "yellow" },
                { "value": 0.02, "color": "red" }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 6, "y": 0 }
      },
      {
        "id": 3,
        "title": "Active Threats",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(swarm_detection_signature_total[5m]) + rate(swarm_detection_anomaly_total[5m]))",
            "legendFormat": "Threats/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "color": { "mode": "thresholds" }
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 12, "y": 0 }
      },
      {
        "id": 4,
        "title": "Blocked Actions",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(swarm_action_executed_total{action_type=\"block\"})",
            "legendFormat": "Blocked"
          }
        ],
        "gridPos": { "h": 8, "w": 6, "x": 18, "y": 0 }
      },
      {
        "id": 5,
        "title": "Threat Detections by Severity",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum(rate(swarm_detection_critical_total[5m]))",
            "legendFormat": "Critical"
          },
          {
            "expr": "sum(rate(swarm_detection_high_total[5m]))",
            "legendFormat": "High"
          },
          {
            "expr": "sum(rate(swarm_detection_medium_total[5m]))",
            "legendFormat": "Medium"
          },
          {
            "expr": "sum(rate(swarm_detection_low_total[5m]))",
            "legendFormat": "Low"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "custom": { "lineWidth": 2, "fillOpacity": 10 }
          }
        },
        "gridPos": { "h": 9, "w": 12, "x": 0, "y": 8 }
      },
      {
        "id": 6,
        "title": "Detection Performance Metrics",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(swarm_ingest_e2e_latency_ms_bucket[5m]))",
            "legendFormat": "P95 Latency"
          },
          {
            "expr": "histogram_quantile(0.99, rate(swarm_ingest_e2e_latency_ms_bucket[5m]))",
            "legendFormat": "P99 Latency"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms"
          }
        },
        "gridPos": { "h": 9, "w": 12, "x": 12, "y": 8 }
      },
      {
        "id": 7,
        "title": "Top Threat Types",
        "type": "piechart",
        "targets": [
          {
            "expr": "topk(5, sum by (threat_type) (swarm_detection_signature_total))",
            "legendFormat": "{{threat_type}}"
          }
        ],
        "gridPos": { "h": 9, "w": 8, "x": 0, "y": 17 }
      },
      {
        "id": 8,
        "title": "Consensus Health",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(consensus_round_duration_ms_bucket[5m]))",
            "legendFormat": "P95 Round Time"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "thresholds": {
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 300, "color": "yellow" },
                { "value": 500, "color": "red" }
              ]
            }
          }
        },
        "gridPos": { "h": 9, "w": 8, "x": 8, "y": 17 }
      },
      {
        "id": 9,
        "title": "Network Nodes Status",
        "type": "stat",
        "targets": [
          {
            "expr": "count(up{job=\"node-runtime\"} == 1)",
            "legendFormat": "Active Nodes"
          }
        ],
        "gridPos": { "h": 9, "w": 8, "x": 16, "y": 17 }
      }
    ]
  }
}

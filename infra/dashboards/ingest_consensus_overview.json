{
  "title": "Ingest & Consensus Overview",
  "panels": [
    {
      "type": "timeseries",
      "title": "Ingest Rate (events/s)",
      "targets": [ { "expr": "rate(swarm_ingest_events_total[1m])" } ]
    },
    {
      "type": "timeseries",
      "title": "Ingest Errors (rate)",
      "targets": [ { "expr": "rate(swarm_ingest_errors_total[1m])" } ]
    },
    {
      "type": "stat",
      "title": "Degraded Mode Count",
      "targets": [ { "expr": "swarm_ingest_degraded_mode_total" } ]
    },
    {
      "type": "timeseries",
      "title": "Consensus Rounds (placeholder)",
      "targets": [ { "expr": "increase(svc_consensus_round_total[5m])" } ]
    }
    ,
    {
      "type": "timeseries",
      "title": "View Change Rate",
      "targets": [ { "expr": "rate(consensus_view_changes_total[5m])" } ]
    },
    {
      "type": "timeseries",
      "title": "Round Progress p95 (ms)",
      "targets": [ { "expr": "histogram_quantile(0.95, sum by (le)(rate(consensus_round_progress_ms_bucket[5m])))" } ]
    }
  ],
  "schemaVersion": 39,
  "version": 1
}
